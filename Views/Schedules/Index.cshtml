@model IEnumerable<TestAplication.Models.Schedule>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List Task Schedule</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (ViewData["AlertDue"] != null)
{
    <script>alert("@ViewData["AlertDue"]");</script>
}


<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            <select id="FilterCategory" name="FilterCategory">

                <option value=""></option>
                <option value="Priority">Priority</option>

                <option value="Detail">Detail</option>

            </select>
            <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Detail)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["priSortParm"]">  @Html.DisplayNameFor(model => model.Priority)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["dueDateSortParm"]"> @Html.DisplayNameFor(model => model.DueDate)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Detail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDone)
            </td>
      

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
